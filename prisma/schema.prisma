generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  Expense  Expense[]

  @@map("users")
}

model Expense {
  expense_id  Int             @id @default(autoincrement())
  user_id     Int
  category_id Int
  amount      Decimal         @db.Decimal(10, 2)
  description String
  date        DateTime
  user        User            @relation(fields: [user_id], references: [id])
  category    ExpenseCategory @relation(fields: [category_id], references: [id])

  @@map("expenses")
}

model ExpenseCategory {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Expense Expense[]

  @@map("categories")
}
